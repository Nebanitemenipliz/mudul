# Импортируем необходимые модули
from telethon import events, types, utils, Button
from telethon.tl.types import InputWebDocument, InputWebFileLocation, Message
from telethon.tl.functions.messages import SendMessageRequest

# Определяем класс модуля и добавляем декоратор loader.tds
@loader.tds
class MyModuleClassMod(loader.Module):
    """Краткое описание модуля"""
    
    # Определяем строки для локализации (замените их на нужные вам)
    strings = {"name": "MyModule",
               "hello": "<b>Привет!</b>",
               "button_text": "Нажми меня!",
               "button_url": "https://t.me/mybotchannel"}
    
    # Определяем метод-обработчик команды
    @loader.unrestricted
    async def mycmd(self, event: events.NewMessage):
        """Описание команды"""
        
        # Отправляем ответное сообщение с приветствием
        await event.respond(self.strings["hello"])
        
        # Создаем кнопку для отправки ссылки
        button = Button.url(self.strings["button_text"], self.strings["button_url"])
        
        # Отправляем сообщение с кнопкой
        await event.respond("Это кнопка для теста:", buttons=button)
